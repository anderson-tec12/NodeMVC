<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>MMORPG - Game of Thrones</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

	</head>

	<body class="body-jogo">

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="form-group sair">
					<button type="button" class="btn btn-info pull-right"id="btn-sair"> Sair</button>
				</div>
			</div>
		</nav>

	    <div class="container">
			<% if(comando_invalido == 'S'){%>
				<div class="alert alert-danger" id="msg_erros">
					<strong>Operação invalida</strong>
				</div>
			<%}%>
			<div class="row">
	    		<div class="col-sm-3 casa">
					<img src="images/casa_<%=img_casa%>.jpg" />
				</div>

	    		<div class="col-sm-9">
					<div class="row barra-superior">
						<div class="col-sm-2"> 
							<img src="images/habilidades/temor.jpg" title="Temor" alt="Temor" />
							<span><%= jogo.temor %></span>
						</div>
						
						<div class="col-sm-2"> 
							<img src="images/habilidades/sabedoria.jpg" title="Sabedoria" alt="Sabedoria"/>
							<span><%= jogo.sabedoria%></span>
						</div>
						
						<div class="col-sm-2"> 
							<img src="images/habilidades/comercio.jpg" title="Comércio" alt="Comércio"/>
							<span><%= jogo.comercio %></span>
						</div>
						
						<div class="col-sm-2"> 
							<img src="images/habilidades/magia.jpg" title="Magia" alt="Magia"/>
							<span><%= jogo.magia %></span>
						</div>
					</div>
				</div>
	    	</div>
			
			<div class="row">
				<div class="col-sm-3"></div>
				<div class="col-sm-9">
					<div class="acoes" id="acoes"></div>					
				</div>
			</div>
			
		</div>	
		
		<div class="barra-inferior">
			<div class="container">
			
				<div class="row">
					<div class="col-sm-1">
						<img src="images/outros/suditos.jpg" title="Aldeões" id="btn_aldeoes" alt="Aldeões"/>
						<span><%= jogo.suditos %></span>
					</div>
					
					<div class="col-sm-1">
						<img src="images/outros/pergaminho.jpg" title="Pergaminhos" id="btn_pergaminhos" alt="Pergaminhos"/>
					</div>
					
					<div class="col-sm-8"></div>
					
					<div class="col-sm-2">
						<img src="images/outros/moeda.jpg" title="Moeda" alt="Moeda"/>
						<span><%= jogo.moeda %></span>
					</div>
					
				</div>
			</div>
		</div>

		<script>
			document.querySelector('#btn-sair').onclick = ()=>{
				window.location.href = '/sair'
			}

			document.querySelector('#btn_aldeoes').onclick = ()=>{
				document.querySelector('#msg_erros').style.display = 'none'
				$.ajax({
					url:'/suditos',
					type:'get',
					success: function(data){
						document.querySelector('#acoes').innerHTML = data
					}
				})
			}

			document.querySelector('#btn_pergaminhos').onclick = ()=>{
				document.querySelector('#msg_erros').style.display = 'none'
				$.ajax({
					url:'/pergaminhos',
					type:'get',
					success: function(data){
						document.querySelector('#acoes').innerHTML = data
					}
				})
			}
		</script>
	</body>
</html>